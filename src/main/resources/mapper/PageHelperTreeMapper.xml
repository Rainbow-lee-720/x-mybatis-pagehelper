<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.xmybatispagehelper.mapper.PageHelperTreeMapper">

    <sql id="baseSql">
        id, name, p_id, sort
    </sql>

    <resultMap id="baseResultMap" type="com.springboot.xmybatispagehelper.entity.PageHelperTree">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="p_id" property="pId"/>
        <result column="sort" property="sort"/>
    </resultMap>

    <select id="queryAllTreeCondition" parameterType="com.springboot.xmybatispagehelper.entity.PageHelperTree" resultMap="baseResultMap">
        SELECT
        <include refid="baseSql"></include>
        FROM t_tree
        <where>
            <if test="name != null and name != ''">
                name LIKE concat(concat('%',#{name}),'%')
            </if>
            <if test="pId != null and pId != ''">
                AND pId = #{pId}
            </if>
        </where>
        ORDER BY id
    </select>
</mapper>
